<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:splitMotionEvents">false</item>
        <item name="android:windowEnableSplitTouch">false</item>
        <item name="android:textColorSecondary">#2B335E</item>
        <item name="android:textColor">@color/colorBaseTextColor</item>
    </style>

    <style name="customCheckboxStyle" parent="AppTheme">
        <item name="colorControlNormal">@color/colorBtnBaseColor</item>
        <item name="colorControlActivated">@color/colorBtnBaseColor</item>
    </style>

</resources>
