<resources>

    <!-- Base application theme. -->
    <style name="FpAppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorSdkPrimary</item>
        <item name="colorPrimaryDark">@color/colorSdkPrimaryDark</item>
        <item name="colorAccent">@color/colorSdkAccent</item>
        <item name="android:splitMotionEvents">false</item>
        <item name="android:windowEnableSplitTouch">false</item>
        <item name="android:textColorSecondary">#2B335E</item>
        <item name="android:textColor">@color/colorSdkBaseTextColor</item>
    </style>

    <style name="customCheckboxStyle" parent="FpAppTheme">
        <item name="colorControlNormal">@color/colorBtnBaseColor</item>
        <item name="colorControlActivated">@color/colorBtnBaseColor</item>
    </style>

</resources>
