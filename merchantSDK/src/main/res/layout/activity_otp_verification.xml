<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorSdkBaseBackground"
    android:id="@+id/clMain">

    <ImageView
        android:id="@+id/goBackBtn"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/size_30dp"
        android:layout_marginTop="@dimen/size_base_padding"
        android:paddingStart="@dimen/size_15dp"
        android:paddingEnd="@dimen/size_8dp"
        app:tint="@color/colorSdkBaseTextColor"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_go_back_icon" />

    <com.fastpay.payment.view.custom.CustomTextView
        android:id="@+id/goBackText"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:gravity="center"
        android:paddingTop="@dimen/size_3dp"
        android:paddingBottom="@dimen/size_3dp"
        android:text="Go back"
        android:textAlignment="viewStart"
        android:textColor="@color/colorSdkBaseTextColor"
        android:textSize="@dimen/text_small_medium"
        app:layout_constraintBottom_toBottomOf="@+id/goBackBtn"
        app:layout_constraintStart_toEndOf="@+id/goBackBtn"
        app:layout_constraintTop_toTopOf="@+id/goBackBtn" />

    <com.fastpay.payment.view.custom.CustomTextView
        android:id="@+id/title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_20dp"
        android:gravity="start"
        android:text="@string/verify_your_account"
        android:textAlignment="viewStart"
        android:textColor="@color/colorSdkAccent"
        android:textSize="@dimen/text_large"
        app:layout_constraintEnd_toEndOf="@+id/pinField6"
        app:layout_constraintStart_toStartOf="@+id/pinField1"
        app:layout_constraintTop_toBottomOf="@+id/goBackText"
        app:textStyle="Normal" />

    <com.fastpay.payment.view.custom.CustomTextView
        android:id="@+id/subTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_15dp"
        android:gravity="start"
        android:text="Subtitle"
        android:textAlignment="viewStart"
        android:textColor="@color/colorSdkSecondTextColor"
        android:textSize="@dimen/text_small_medium"
        app:layout_constraintEnd_toEndOf="@+id/title"
        app:layout_constraintStart_toStartOf="@+id/title"
        app:layout_constraintTop_toBottomOf="@+id/title"
        app:textStyle="Normal" />

    <LinearLayout
        android:id="@+id/pinField1"
        android:layout_width="@dimen/size_50dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_10dp"
        app:layout_constraintEnd_toStartOf="@+id/pinField2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/subTitle">

        <com.fastpay.payment.view.custom.CustomEditText
            android:id="@+id/tvPin1"
            android:layout_width="0dp"
            android:layout_height="@dimen/size_60dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:gravity="center_vertical"
            android:inputType="number"
            android:paddingLeft="@dimen/size_10dp"
            android:paddingTop="@dimen/size_5dp"
            android:paddingRight="@dimen/size_10dp"
            android:paddingBottom="@dimen/size_5dp"
            android:textColor="@color/colorPINTextColor"
            android:textColorHint="@color/colorSdkSecondTextColor"
            android:textSize="@dimen/text_medium"
            app:textStyle="Normal" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/pinField2"
        android:layout_width="@dimen/size_50dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/pinField1"
        app:layout_constraintEnd_toStartOf="@+id/pinField3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/pinField1"
        app:layout_constraintTop_toTopOf="@+id/pinField1">

        <com.fastpay.payment.view.custom.CustomEditText
            android:id="@+id/tvPin2"
            android:layout_width="0dp"
            android:layout_height="@dimen/size_60dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:gravity="center_vertical"
            android:inputType="number"
            android:paddingLeft="@dimen/size_10dp"
            android:paddingTop="@dimen/size_5dp"
            android:paddingRight="@dimen/size_10dp"
            android:paddingBottom="@dimen/size_5dp"
            android:textColor="@color/colorPINTextColor"
            android:textColorHint="@color/colorSdkSecondTextColor"
            android:textSize="@dimen/text_medium"
            app:textStyle="Normal" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/pinField3"
        android:layout_width="@dimen/size_50dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/pinField1"
        app:layout_constraintEnd_toStartOf="@+id/pinField4"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/pinField2"
        app:layout_constraintTop_toTopOf="@+id/pinField1">

        <com.fastpay.payment.view.custom.CustomEditText
            android:id="@+id/tvPin3"
            android:layout_width="0dp"
            android:layout_height="@dimen/size_60dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:gravity="center_vertical"
            android:inputType="number"
            android:paddingLeft="@dimen/size_10dp"
            android:paddingTop="@dimen/size_5dp"
            android:paddingRight="@dimen/size_10dp"
            android:paddingBottom="@dimen/size_5dp"
            android:textColor="@color/colorPINTextColor"
            android:textColorHint="@color/colorSdkSecondTextColor"
            android:textSize="@dimen/text_medium"
            app:textStyle="Normal" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/pinField4"
        android:layout_width="@dimen/size_50dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/pinField1"
        app:layout_constraintEnd_toStartOf="@+id/pinField5"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/pinField3"
        app:layout_constraintTop_toTopOf="@+id/pinField1">

        <com.fastpay.payment.view.custom.CustomEditText
            android:id="@+id/tvPin4"
            android:layout_width="0dp"
            android:layout_height="@dimen/size_60dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:gravity="center_vertical"
            android:inputType="number"
            android:paddingLeft="@dimen/size_10dp"
            android:paddingTop="@dimen/size_5dp"
            android:paddingRight="@dimen/size_10dp"
            android:paddingBottom="@dimen/size_5dp"
            android:textColor="@color/colorPINTextColor"
            android:textColorHint="@color/colorSdkSecondTextColor"
            android:textSize="@dimen/text_medium"
            app:textStyle="Normal" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/pinField5"
        android:layout_width="@dimen/size_50dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/pinField1"
        app:layout_constraintEnd_toStartOf="@+id/pinField6"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/pinField4"
        app:layout_constraintTop_toTopOf="@+id/pinField1">

        <com.fastpay.payment.view.custom.CustomEditText
            android:id="@+id/tvPin5"
            android:layout_width="0dp"
            android:layout_height="@dimen/size_60dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:gravity="center_vertical"
            android:inputType="number"
            android:paddingLeft="@dimen/size_10dp"
            android:paddingTop="@dimen/size_5dp"
            android:paddingRight="@dimen/size_10dp"
            android:paddingBottom="@dimen/size_5dp"
            android:textColor="@color/colorPINTextColor"
            android:textColorHint="@color/colorSdkSecondTextColor"
            android:textSize="@dimen/text_medium"
            app:textStyle="Normal" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/pinField6"
        android:layout_width="@dimen/size_50dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/pinField1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/pinField5"
        app:layout_constraintTop_toTopOf="@+id/pinField1">

        <com.fastpay.payment.view.custom.CustomEditText
            android:id="@+id/tvPin6"
            android:layout_width="0dp"
            android:layout_height="@dimen/size_60dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:gravity="center_vertical"
            android:inputType="number"
            android:paddingLeft="@dimen/size_10dp"
            android:paddingTop="@dimen/size_5dp"
            android:paddingRight="@dimen/size_10dp"
            android:paddingBottom="@dimen/size_5dp"
            android:textColor="@color/colorPINTextColor"
            android:textColorHint="@color/colorSdkSecondTextColor"
            android:textSize="@dimen/text_medium"
            app:textStyle="Normal" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>